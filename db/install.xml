<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/throwquestions/db" VERSION="20150506" COMMENT="XMLDB file for Moodle mod/throwquestions"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="throwquestions" COMMENT="Default comment for throwquestions, please edit me">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="battle" COMMENT="Battle">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="sender_id" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false" COMMENT="sender id"/>
        <FIELD NAME="receiver_id" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false" COMMENT="receiver id"/>
        <FIELD NAME="question" TYPE="text" NOTNULL="true" SEQUENCE="false" COMMENT="question"/>
        <FIELD NAME="correct" TYPE="text" NOTNULL="true" SEQUENCE="false" COMMENT="correct answer"/>
        <FIELD NAME="incorrect_1" TYPE="text" NOTNULL="true" SEQUENCE="false" COMMENT="incorrect answer"/>
        <FIELD NAME="incorrect_2" TYPE="text" NOTNULL="true" SEQUENCE="false" COMMENT="incorrect answer"/>
        <FIELD NAME="incorrect_3" TYPE="text" NOTNULL="true" SEQUENCE="false" COMMENT="incorrect answer"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="score" COMMENT="score">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="battle_id" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false" COMMENT="battle_id"/>
        <FIELD NAME="winner" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false" COMMENT="winner"/>
        <FIELD NAME="loser" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false" COMMENT="loser"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>